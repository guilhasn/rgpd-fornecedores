generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UnidadeOrganica {
  id        String    @id @default(uuid())
  sigla     String    @unique
  nome      String
  processos Process[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("unidades_organicas")
}

model Process {
  id                Int             @id @default(autoincrement())
  referencia        String          @unique
  cliente           String
  assunto           String
  estado            String
  prioridade        String
  dataEntrada       DateTime
  unidadeOrganicaId String
  unidadeOrganica   UnidadeOrganica @relation(fields: [unidadeOrganicaId], references: [id])
  rgpd              ProcessGdpr?
  historico         ProcessHistory[]
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  @@map("processes")
}

model ProcessGdpr {
  id                         Int      @id @default(autoincrement())
  processId                  Int      @unique
  process                    Process  @relation(fields: [processId], references: [id], onDelete: Cascade)
  nif                        String?
  dataInicioContrato         DateTime?
  dataFimContrato            DateTime?
  temAcessoDados             String?
  tipoDadosPessoais          String?
  nivelRisco                 String?
  medidasSeguranca           String?
  finalidadeTratamento       String?
  subcontratacao             String?
  transferenciaInternacional String?

  @@map("process_gdpr")
}

model ProcessHistory {
  id        Int      @id @default(autoincrement())
  processId Int
  process   Process  @relation(fields: [processId], references: [id], onDelete: Cascade)
  data      DateTime @default(now())
  acao      String
  user      String
  
  @@map("process_history")
}