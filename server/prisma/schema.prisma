generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Process {
  id              Int             @id @default(autoincrement())
  referencia      String          @unique
  cliente         String
  assunto         String?
  unidadeOrganica String
  estado          String
  prioridade      String?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  
  rgpd            ProcessGdpr?
  historico       ProcessHistory[]

  @@map("processes")
}

model ProcessGdpr {
  id                        Int      @id @default(autoincrement())
  processId                 Int      @unique
  process                   Process  @relation(fields: [processId], references: [id], onDelete: Cascade)
  
  nif                       String?
  dataInicioContrato        String?
  dataFimContrato           String?
  temAcessoDados            String?  // "Sim" | "Não"
  tipoDadosPessoais         String?
  finalidadeTratamento      String?
  transferenciaInternacional String? // "Sim" | "Não"
  paisTransferencia         String?
  subcontratacao            String?  // "Sim" | "Não"
  nivelRisco                String?  // "Baixo" | "Médio" | "Alto" | "Crítico"
  medidasSeguranca          String?
  responsavelContrato       String?
  emailResponsavel          String?

  @@map("process_gdpr")
}

model ProcessHistory {
  id        Int      @id @default(autoincrement())
  processId Int
  process   Process  @relation(fields: [processId], references: [id], onDelete: Cascade)
  
  data      String   // ISO Date String YYYY-MM-DD
  acao      String
  user      String?
  createdAt DateTime @default(now())

  @@map("process_history")
}

model UnidadeOrganica {
  id    String @id @default(uuid())
  sigla String @unique
  nome  String

  @@map("unidades_organicas")
}